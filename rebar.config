{erl_opts, [debug_info, {i, "./apps/"}]}.
{deps, [
  {vegur, {git, "https://github.com/heroku/vegur"}}
 ,recon
 ,cowboy
 ,{cowlib, {git, "https://github.com/ninenines/cowlib.git", {tag, "1.0.0"}}}
]}.

{plugins, [
  { rebar3_elixir_compile, {git, "https://github.com/barrel-db/rebar3_elixir_compile.git", {branch, "master"}}}
]}.

{provider_hooks, [
  {pre, [{compile, {ex, compile}}]},
  {pre, [{release, {ex, compile}}]}
]}.

{elixir_opts, 
  [
    {env, dev}
  ]
}.

{shell, [
  {config, "config/sys.config"}
]}.

{dist_node, [
  {setcookie, 'proxy42_shell_secret'},
  {sname, 'proxy42_shell'}
]}.

{relx, [{release, { proxy42, "0.1.0" },
         [proxy42,
          storage,
          proxy42_control_api,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
